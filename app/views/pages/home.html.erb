<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4">
        <div class="student-card bg-light">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face, class:"avatar-large mx-auto", alt: "avatar-large" %>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large mx-auto", alt: "avatar-large" %>
          <% end %>
          <div class="text-center mt-4">
            <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
            <p><i class="fas fa-calendar-week"></i> <%= Date.today.strftime("%a, %e %b %Y") %></p>
          </div>
          <div class="schedule-card container">
            <h5 class="text-center">Reminders</h5>
            <% if @schedules.empty? %>
              <div class="schedule-cards-empty">
                <i class="fas fa-smile-wink"></i>
                <p>Nothing to do yet!</p>
              </div>
            <% else %>
              <% @schedules.reverse.first(2).each do |schedule| %>
                <div class="schedule-cards">
                  <p><%= schedule.date  %></p>
                  <p><%= schedule.content  %></p>
                  <%= link_to 'Edit', edit_schedule_path(schedule)%>
                  <%= link_to 'Delete', schedule_path(schedule), method: :delete, data: { confirm: 'Are you sure?' }%>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-8">
        <div class="subject-cards">
          <% @subjects.each do |subject| %>
            <div class="subject-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path subject.category.photo.key, height: 300, crop: :fill %>')">
              <i class="fas fa-bars"></i>
              <div class="subject-title px-3">
                <h3><%= subject.name %></h3>
                <h4><%= subject.category.name %></h4>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= render 'shared/homepage' %>
<% end %>
