<div class="container">
  <div class="mt-4 mb-4 d-flex">
    <div>
      <%= form_tag campus_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a teacher/student"
        %>
    </div>
    <div>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
<h2>Number of teachers: <%= @count_teachers%></h2>
<h3>Number of students: <%= @count_students%></h3>
  <% @users.each do |user| %>
    <% if user != current_user %>
      <div class="card-user my-4">
        <% if user.photo.attached?%>
          <%= cl_image_tag user.photo.key, gravity: :face, crop: :thumb  %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <% end %>
        <div class="card-user-infos">
          <% word = user.teacher? ? "Teacher" : "Student"%>
          <h2><%= user.first_name %> <%= user.last_name %> | <%= word %></h2>
          <p><strong><%= user.email %></strong></p>
        </div>
        <% if policy(Chatroom).new? %>
          <%= link_to 'Contact', new_chatroom_path(user), class:"btn btn-primary teacher-contact"%>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
