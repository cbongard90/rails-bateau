<div class="container">
  <ul>
    <% @schedules.each do |schedule|%>
      <li>
        <%= schedule.content %> | <%= schedule.date %> | <%= link_to 'Edit', edit_schedule_path(schedule) %> | <%= link_to 'Delete', schedule_path(schedule), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create a New Schedule", new_schedule_path %>
</div>

<br>
<br>
<div class="container">
  <%= month_calendar do |date| %>
    <%= date.day %>
    <% @schedules.each do |schedule| %>
      <% if date == schedule.date %>
        <div><small><%= schedule.content %></small></div>
      <% end %>
    <% end %>
  <% end %>
</div>
