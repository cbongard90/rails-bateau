<div class="container">
  <div class="search-bar form-inline mt-4 mb-4">
    <%= form_tag schedules_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <ul>
    <% @schedules.each do |schedule|%>
      <li>
        <%= schedule.content %> | <%= schedule.date %> | <%= link_to 'Edit', edit_schedule_path(schedule) %> | <%= link_to 'Delete', schedule_path(schedule), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
</div>
<div class="container">
  <%= month_calendar do |date| %>
    <% if @schedules.empty? %>
      <%= date.day %>
    <% else %>
      <% @schedules.each do |schedule| %>
        <% if date == schedule.date %>
          <!-- Schedule Modal Trigger -->
          <div class="event" data-toggle="modal" data-target="#scheduleModal"><%= date.day %></div>
        <% else %>
          <%= date.day %>
        <% end %>
        <!-- Schedule Modal -->
        <div class="modal fade" id="scheduleModal" tabindex="-1" role="dialog" aria-labelledby="scheduleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="scheduleModalLabel"><%= date %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= schedule.content %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Create a New Schedule", new_schedule_path %>
